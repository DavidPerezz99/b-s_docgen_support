# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.hbs]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.scss]
indent_size = 2

[*.ts]
indent_size = 2
trim_trailing_whitespace = true

[*.yml, *.yaml]
indent_size = 2
