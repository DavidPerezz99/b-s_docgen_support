{
  "name": "docgen",
  "version": "0.1.0",
  "description": "Slalom's app accelerator for SAM APIs",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/slalom-consulting/business-at-slalom-docgen.git"
  },
  "author": {
    "name": "Slalom",
    "url": "https://slalom.com"
  },
  "contributors": [
    "Michael J Smith <michael.j.smith@slalom.com>",
    "Andrew McCormick <andrew.mccormick@slalom.com>"
  ],
  "scripts": {
    "audit": "npm audit --registry https://registry.npmjs.org",
    "audit:fix": "npm audit fix --registry https://registry.npmjs.org",
    "aws:login": "tsimp local_setup/aws-login/aws-login.mts",
    "aws:whoami": "tsimp local_setup/aws-whoami/aws-whoami.mts",
    "build": "npm run build:config -- config/webpack/webpack.config.release.js",
    "build:config": "npm run clean && npm run gen && npm run compile && webpack --bail --config ",
    "build:dev": "npm run build:config -- config/webpack/webpack.config.dev.js --progress",
    "build:watch": "npm run build:dev -- --watch",
    "clean": "rimraf dist generated.* *.generated.* \"src/**/generated.*\"",
    "clean:coverage": "rimraf coverage",
    "compile": "tsc --noEmit --allowImportingTsExtensions",
    "debug": "cross-env-shell DEBUG=1 \"npm run build:dev && npm run docker && npm run service\"",
    "docker": "docker ps > /dev/null 2>&1 || colima start",
    "dynamo:network": "docker network create serverless-network",
    "dynamo:start": "npm run docker && docker-compose up -d && tsimp local_setup/init-dynamodb-local/init-dynamodb-local.mts",
    "dynamo:stop": "docker-compose down",
    "gen": "npm run gen:spec && npm run gen:handlers && npm run gen:openapi:client",
    "gen:spec": "tsoa spec && prettier --write generated.swagger.yaml --ignore-path=.prettierignore",
    "gen:handlers": "tsc -p ./build/node/tsconfig.codegen.json && tsoa routes && npm run prettier:gen",
    "gen:openapi:client": "swagger-typescript-api --modular -p ./generated.swagger.yaml -o ./api-tests/generated.client --templates ./build/templates/open-api-client/base",
    "lint": "eslint './src/**/*.ts' && npm run lint:apitests",
    "lint:apitests": "eslint --parser-options=project:api-tests/tsconfig.json \"./api-tests/**/*.ts\"",
    "lint:fix": "eslint './src/**/*.ts' --fix && npm run lint:apitests -- --fix",
    "prepare": "husky",
    "prettier": "prettier --write \"./src/**/*.{ts,js,json,md,yml}\"",
    "prettier:apitests": "prettier --write \"./api-tests/**/*.{ts,js,json,md,yml}\"",
    "prettier:gen": "prettier --write \"./src/**/generated*.ts\" --ignore-path=.prettierignore",
    "quickdeploy": "npm run build && tsimp local_setup/quickdeploy/quickdeploy.mts",
    "service": "export DOCKER_HOST=$(docker context ls --format 'table {{.DockerEndpoint}}' | grep colima) && echo \"DOCKER_HOST: ${DOCKER_HOST}\" && npm run start:api",
    "start": "npm run build && npm run service",
    "start:api": "tsimp local_setup/start/start.mts",
    "test": "npm run clean:coverage && npm run test:unit",
    "test:api:set-credentials": ". api-tests/config/aws-credentials.sh && npm run test:api",
    "test:api": "npm run gen:spec && npm run gen:openapi:client && tsimp api-tests/test-api.ts",
    "test:api:localhost": "cross-env NODE_CONFIG_ENV=localhost npm run test:api",
    "test:api:dev": "cross-env NODE_CONFIG_ENV=dev npm run test:api:set-credentials",
    "test:api:branch": "cross-env USE_BRANCH=true npm run test:api:set-credentials",
    "test:unit": "jest -c ./config/jest/jest.config.ts --silent"
  },
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.744.0",
    "@aws-sdk/client-lambda": "^3.744.0",
    "@aws-sdk/client-sts": "^3.744.0",
    "@aws-sdk/lib-dynamodb": "^3.744.0",
    "@aws-sdk/types": "^3.734.0",
    "@aws-sdk/util-dynamodb": "^3.744.0",
    "@gapi-slalom/lib-common": "^1.2.1",
    "aws-xray-sdk-core": "^3.10.3",
    "axios": "^1.7.9",
    "jwt-decode": "^4.0.0",
    "reflect-metadata": "^0.2.2",
    "tsoa": "^6.6.0",
    "uuid": "^11.0.5",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.1",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/preset-env": "^7.25.4",
    "@eslint/js": "^9.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/aws-lambda": "^8.10.147",
    "@types/chance": "^1.1.6",
    "@types/config": "^3.3.5",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.x",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^10.0.0",
    "amazon-cognito-identity-js": "^6.3.12",
    "babel-jest": "^29.7.0",
    "chance": "^1.1.12",
    "config": "^3.3.12",
    "cross-env": "^7.0.3",
    "esbuild-loader": "^4.2.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.0.1",
    "eslint-plugin-yaml": "^1.0.3",
    "husky": "^9.1.7",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "swagger-typescript-api": "^13.0.23",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsimp": "^2.0.12",
    "typescript": "5.4.5",
    "typescript-eslint": "^8.0.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "yaml": "^2.7.0"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  }
}
